@model Danime.Models.MangaData.Datum

<div class="details-container">
    <h1>@Model.title</h1>
    <img src="@Model.images?.jpg?.image_url" alt="@Model.title" class="details-image" />
    <p><strong>Score:</strong> @(Model.score.HasValue ? Model.score.Value.ToString("F1") : "No score available")</p>
    <p><strong>Chapters:</strong> @Model.chapters</p>
    <p><strong>Status:</strong> @Model.status</p>
    <p><strong>Synopsis:</strong> @Model.synopsis</p>

    <h3>Genres</h3>
    <ul class="genre-list">
        @if (Model.genres != null)
        {
            foreach (var genre in Model.genres)
            {
                <li>@genre.name</li>
            }
        }
        else
        {
            <li>No genres available.</li>
        }
    </ul>

    <h3>Authors</h3>
    <ul class="author-list">
        @if (Model.authors != null)
        {
            foreach (var author in Model.authors)
            {
                <li>@author.name</li>
            }
        }
        else
        {
            <li>No authors available.</li>
        }
    </ul>
</div>
