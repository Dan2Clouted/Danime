@model Danime.Models.MangaData.Datum

<h1>@Model.title</h1>
<img src="@Model.images?.jpg?.image_url" alt="@Model.title" />
<p><strong>Score:</strong> @Model.score</p>
<p><strong>Chapters:</strong> @Model.chapters</p>
<p><strong>Status:</strong> @Model.status</p>
<p><strong>Synopsis:</strong> @Model.synopsis</p>

<h3>Genres</h3>
<ul>
    @if (Model.genres != null && Model.genres.Any())
    {
        @foreach (var genre in Model.genres)
        {
            <li>@genre.name</li>
        }
    }
    else
    {
        <li>No genres available</li>
    }
</ul>

<h3>Authors</h3>
<ul>
    @if (Model.authors != null && Model.authors.Any())
    {
        @foreach (var author in Model.authors)
        {
            <li>@author.name</li>
        }
    }
    else
    {
        <li>No authors available</li>
    }
</ul>
